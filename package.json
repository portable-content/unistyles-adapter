{
  "name": "@portable-content/unistyles-adapter",
  "version": "0.1.0",
  "description": "React Native adapter that integrates Unistyles 3.0 with the Portable Content SDK for seamless cross-platform styling",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/*~"
  ],
  "scripts": {
    "example": "yarn workspace @portable-content/unistyles-adapter-example",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "clean": "del-cli lib",
    "prepublishOnly": "bob build",
    "release": "release-it",
    "build": "bob build",
    "build:watch": "bob build --watch",
    "dev": "bob build --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react-native",
    "unistyles",
    "portable-content",
    "styling",
    "themes",
    "design-system",
    "cross-platform",
    "fabric",
    "new-architecture",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portable-content/unistyles-adapter.git"
  },
  "author": "Portable Content <hello@portable-content.com> (https://portable-content.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/portable-content/unistyles-adapter/issues"
  },
  "homepage": "https://github.com/portable-content/unistyles-adapter#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/config-conventional": "^18.4.3",
    "@evilmartians/lefthook": "^1.5.5",
    "@react-native/eslint-config": "^0.75.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/react-webpack5": "^9.1.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.38",
    "@types/react-native": "^0.72.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "babel-loader": "^10.0.0",
    "commitlint": "^18.4.3",
    "del-cli": "^5.1.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-storybook": "^9.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.1.0",
    "react": "^19.1.1",
    "react-native": "0.76.0",
    "react-native-builder-bob": "^0.29.0",
    "react-native-edge-to-edge": "^1.6.2",
    "react-native-nitro-modules": "^0.12.0",
    "react-native-unistyles": "^3.0.10",
    "react-native-web": "^0.21.1",
    "release-it": "^17.0.0",
    "storybook": "^9.1.3",
    "typescript": "^5.3.2",
    "webpack": "^5.101.3"
  },
  "peerDependencies": {
    "@portable-content/typescript-sdk": ">=0.2.0",
    "react": ">=19.0.0",
    "react-native": ">=0.78.0",
    "react-native-edge-to-edge": ">=1.0.0",
    "react-native-nitro-modules": ">=0.12.0",
    "react-native-unistyles": ">=3.0.0"
  },
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">= 20.0.0"
  },
  "codegenConfig": {
    "name": "RNUnistylesAdapterSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
